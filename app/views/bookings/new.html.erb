
<h1>Booking Request Form</h1>


<% if flash[:error] %> 
<%= flash[:error] %>
<%end%>


<%= form_for @booking do |f| %>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_select :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_select :end_date %>
  </div>

  <div class="field">
    <%= f.label "Number of Guests" %>
    <%= f.number_field :guests %>
  </div>

  <div class="field">
    <%= f.label "Approximate Budget" %>
    <%= f.number_field :budget %>
  </div>

  <div class="field">
    <%= f.label "Event Location" %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="actions">
    <%= f.submit "Submit Enquiry" %>
  </div>
<% end %>


<%= link_to 'Back', calendar_path %>
